<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Tier 2 -->
  <ResearchProjectDef>
    <defName>PaperclipProduction</defName>
    <label>E=mc2 Equation</label>
    <description>With full understanding of Einstains e=mc squared equation. Allows colonists to build a Energy Condenser that turns raw matter into small Energy Cubes(EMC)</description>
    <techLevel>Spacer</techLevel>
    <baseCost>1000</baseCost>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
      <li>PRF_ResearchTerminal</li>
    </requiredResearchFacilities>
    <prerequisites>
      <li>PRF_CoreTierIII</li>
    </prerequisites>
    <tab>Automation</tab>
    <researchViewX>4</researchViewX>
    <researchViewY>5</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PaperclipGeneratorSelfImprovement</defName>
    <label>EMC power generator: self-improvement</label>
    <techLevel>Spacer</techLevel>
    <baseCost>2250</baseCost>
    <description>EMC power generator slowly produces more power per EMC (up to 500%) unless flicked or out of fuel.</description>
    <prerequisites>
      <li>PRF_CoreTierIV</li>
      <li>PaperclipProduction</li>
    </prerequisites>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
      <li>PRF_ResearchTerminal</li>
    </requiredResearchFacilities>
    <tab>Automation</tab>
    <researchViewX>5</researchViewX>
    <researchViewY>2</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PaperclipGeneratorKugelblitz</defName>
    <label>EMC power generator: kugelblitz</label>
    <techLevel>Spacer</techLevel>
    <baseCost>5000</baseCost>
    <description>EMC power generator maximum efficiency increased up to 1000%.</description>
    <prerequisites>
      <li>PaperclipGeneratorSelfImprovement</li>
    </prerequisites>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
      <li>PRF_ResearchTerminal</li>
    </requiredResearchFacilities>
    <tab>Automation</tab>
    <researchViewX>6</researchViewX>
    <researchViewY>2</researchViewY>
  </ResearchProjectDef>

  <ResearchProjectDef>
    <defName>PaperclipGeneratorQuantumFoamManipulation</defName>    <!-- Keep this def name for backwards compatibility -->
    <label>EMC power generator: quantum foam manipulation</label>
    <techLevel>Spacer</techLevel>
    <baseCost>10000</baseCost>
    <description>EMC power generator maximum efficiency increased up to 2500%.</description>
    <prerequisites>
      <li>PaperclipGeneratorKugelblitz</li>
    </prerequisites>
    <requiredResearchFacilities>
      <li>MultiAnalyzer</li>
      <li>PRF_ResearchTerminal</li>
    </requiredResearchFacilities>
    <tab>Automation</tab>
    <researchViewX>7</researchViewX>
    <researchViewY>2</researchViewY>
  </ResearchProjectDef>

</Defs>